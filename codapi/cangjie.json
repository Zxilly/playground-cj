{
  "run": {
    "engine": "docker",
    "entry": "main.cj",
    "steps": [
      {
        "box": "cangjie",
        "command": [
          "sh",
          "-c",
          "/cangjie/bin/cjc --static-std --static-libs -o main main.cj && /sandbox/main"
        ]
      }
    ]
  },
  "format": {
    "engine": "docker",
    "entry": "main.cj",
    "steps": [
      {
        "box": "cangjie",
        "command": [
          "sh",
          "-c",
          "output=$(cjfmt -f main.cj -o /tmp/fmt.cj 2>&1); if [ -n \"$output\" ]; then echo -e \"$output\" >&2; exit 1; else cat /tmp/fmt; fi"
        ]
      }
    ]
  }
}
